<div class="container px-5 px-sm-0">
	<div class="row">
		<div class="col-md-3">
			<%= render 'users/user', user: @user, book: @book %>
		</div>
		
		<div class="col-md-8 offset-md-1">
			<h2>Books</h2>
			<table class="table table-hover table-inverse">
				<thead>
					<tr>
						<th></th>
						<th>Title</th>
						<th>Opinion</th>
					</tr>
				</thead>
				<tbody>
					<% @books.each do |book| %>
					<tr>
						<td>
							<% if book.user.image.attached? %>
								<%= image_tag book.user.image, size: "80x80" %>
							<% else %>
								<%= image_tag 'no-image', size: "80x80" %>
							<% end %>
						</td>
						<td><%= link_to "book.title", "/books/#{book.id}" %></td>
						<td><%= book.body %></td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>

