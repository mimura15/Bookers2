<div class="container px-5 px-sm-0">
	<div class="row">
		<div class="col-md-3">
			<%= render 'users/user', user: @user, book: @book2 %>
		</div>
		
		<div class= "col-md-8 offset-md-1">
			<h2>Book detail</h2>
			<table class="table">
				<tbody>
					<tr>
						<td>
							<% if @user.image.attached? %>
	    					<%= image_tag @user.profile_image, size: "80x80" %>
	  					<% else %>
								<%= image_tag 'no-image', size: "80x80" %>
							<% end %><br>
							<%= link_to @user.name, user_path(@user.id) %>
						</td>
						<td><%= link_to @book.title, "/books/#{@book.id}" %></td>
						<td><%= @book.body %></td>
						<td>
							<% if @book.user == current_user %>
								<%= link_to edit_book_path(@book.id) do %>
									<button type="button" class="btn btn-sm btn-success">Edit</button>
								<% end %>
							<% end %>
						</td>
						<td>
							<% if @book.user == current_user %>
								<%= link_to destroy_book_path(@book.id), method: :delete, "data-confirm" => "本当に消しますか？" do %>
									<button type="button" class="btn btn-sm btn-danger">Destroy</button>
								<% end %>
							<% end %>
						</td>
					</tr>
				</tbody>
			</table>
		</div>
	</div>
</div>
