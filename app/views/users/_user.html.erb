<h2>User info</h2>

<% if user.profile_image.attached? %>
 <%= image_tag user.profile_image, size: "100x100" %>
<% else %>
	<%= image_tag 'no-image', size: "100x100" %>
<% end %>

<table class="table">
	<tr></tr>
	<tr>
		<th>name</th>
		<th><%= user.name %></th>
	</tr>
	<tr>
		<th>introduction</th>
		<th><%= user.introduction %></th>
	</tr>
</table>

<%= link_to edit_user_path(user.id) do %>
	<button type="button" class="btn btn-outline-dark btn-lg btn-block">
		<i class="fas fa-user-cog"></i>
	</button>
<% end %>

<h2 class="mt-3">New book</h2>
<%= form_with model: book do |f| %>
	<div class="form-group">
		<label for="book_title">Title</label><br>
		<%= f.text_field :title %>
	</div>
	
	<div class="form-group">
		<label for="book_opinion">Opinion</label><br>
		<%= f.text_area :body %>
	</div>
	
	<div class="form-group">
		<input type="submit" name="commit" value="Create Book" class="btn btn-success" data-disable-with="Create Book">
	</div>
	
<% end %>